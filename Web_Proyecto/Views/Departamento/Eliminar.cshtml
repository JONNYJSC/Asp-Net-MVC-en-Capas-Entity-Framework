@model ENTIDAD.Departamento

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Estas seguro de eliminar esto?</h3>
<div>
    <h4>Eliminar Departamento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Departamento
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreDepartamento)
        </dd>

    </dl>

    @using (Html.BeginForm("Eliminar","Departamento", FormMethod.Post)) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Departamento")" class="btn btn-info">
        <i class="glyphicon glyphicon-chevron-left"></i> Regersar
    </a>
</div>
    }
</div>
