@model ENTIDAD.Departamento

@{
    ViewBag.Title = "Editar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Editar", "Departamento",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Editar Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartamentoId)

    <div class="form-group">
        <label class="control-label col-md-2">Nombre del Departamento</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreDepartamento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NombreDepartamento, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Departamento")" class="btn btn-info">
        <i class="glyphicon glyphicon-chevron-left"></i> Regersar
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
