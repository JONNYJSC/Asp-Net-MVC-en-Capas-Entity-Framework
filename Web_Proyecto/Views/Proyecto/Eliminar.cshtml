@model ENTIDAD.Proyecto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Estas seguro de eliminar esto?</h3>
<div>
    <h4>Eliminar Proyecto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Proyecto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreProyecto)
        </dd>

        <dt>
            Fecha Inicio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>

        <dt>
            Fecha Fin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaFin)
        </dd>

    </dl>

    @using (Html.BeginForm("Eliminar", "Proyecto", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a href="@Url.Action("Index", "Proyecto")" class="btn btn-info">
            <i class="glyphicon glyphicon-chevron-left"></i> Regersar</a>
        </div>
    }
</div>
